.homepage, .guides {
  display: flex;
  justify-content: center;
  align-items: center;

  flex-wrap: wrap;
  max-width: 850px;
  min-width: 300px;
  padding: 0.5rem;

  margin-bottom: 5rem;
  margin-left: 0px;
}

.homepage__sidebar, .guides__sidebar {
  display: none;
}

.hero,
.slide {
  width: 90%;

  margin-bottom: 2rem;
}

.hero {

} 


@media screen and (min-width: 767px) {
  .homepage, .guides {
    margin-left: 350px;
  }
  .homepage__sidebar, .guides__sidebar {
    display: flex;
    flex-direction: column;
    
    position: fixed;
    
    top: 0;
    bottom: 0;
    left: 0;
    
    width: 350px;
    background: yellow;
    box-shadow: 0px 0px 4px 0px grey;

  }
}